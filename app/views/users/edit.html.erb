<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
<!--
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
-->
<% if current_user.admin? %>
  <div class="field">
    <%= f.label :enabled, "Enabled" %><br />
    <%= f.check_box :enabled %>
  </div>
  <div class="field">
    <%= f.label :admin, "Admin" %><br />
    <%= f.check_box :admin %>
  </div>
<% end %>
  <%= link_to 'Change Password', "#{edit_user_path(@user)}?pw=1"  %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

